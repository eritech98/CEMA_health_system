<%- include('partials/addProgram/addProgramheader') %>

<body>
  <header class="header">
    <a href="/dashboard" class="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
      </svg>
      Back to Dashboard
    </a>

    <div style="width: 100px;"></div> <!-- Spacer for centering -->
  </header>

  <div class="container">
    <div class="card">
      <div class="card-header">
        <h2>Create Health Program</h2>
        <p>Add a new health program to your practice</p>
      </div>

      <form method="POST" action="/programs/add">
        <div class="input-group">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-1.99.9-1.99 2L3 19c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-1 11h-4v4h-4v-4H6v-4h4V6h4v4h4v4z"/>
          </svg>
          <input name="name" placeholder="Program Name" required />
        </div>

        <div class="program-examples">
          <h3>Common Health Programs</h3>
          <div class="example-tags">
            <div class="example-tag">TB</div>
            <div class="example-tag">HIV</div>
            <div class="example-tag">Diabetes</div>
            <div class="example-tag">Hypertension</div>
            <div class="example-tag">Maternal Care</div>
            <div class="example-tag">Vaccination</div>
            <div class="example-tag">Nutrition</div>
            <div class="example-tag">Mental Health</div>
          </div>
        </div>

        <button type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          Create Program
        </button>
      </form>
    </div>

    <div class="footer">
      <p>Need help? <a href="/support">Contact Support</a></p>
    </div>
  </div>
</body>

<%- include('partials/addProgram/addProgram_footer') %>

